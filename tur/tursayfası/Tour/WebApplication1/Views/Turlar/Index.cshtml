@using WebApplication1.Models.sınıflar;
@model List<Turlar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

@using(Html.BeginForm("Index","Turlar", FormMethod.Get))

{}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Bölge</th>
      
        <th>Şehir</th>
        <th>Giriş Resim</th>
        <th>Tur İsmi</th>
        <th>Tur Tarihleri</th>
        <th>Tur Ücreti</th>
        <th>Kontejyan</th>
        
        

    </tr>
    @foreach (var k in Model)
    {

        <tr>
            
           
           <td>@k.Bolge.bolgeismi</td>
            
            <td> @k.sehir</td>
            <td> <img src="@k.girisresim" style="width:100px; height:80px;"/></td>
            <td> @k.turismi</td>
            <td><a href="@Url.Action("Index","TurTarih",new {id=k.turID})" class="btn btn-success">Tarihler</a></td>
            <td>@k.ucret</td>
            <td>@k.kontejyan</td>
            
            
           <td>
            <a href="@Url.Action("TurlarSil","Turlar",new {id=k.turID})" class="btn btn-danger">Sil</a>
            <a href="@Url.Action("TurlarGetir","Turlar",new {id=k.turID})" class="btn btn-primary">Güncelle</a>
        </td>
        
        <td><a href="@Url.Action("Index","TurDetay",new {id=k.turID})" class="btn btn-success">Detaylar</a></td>
        <td><a href="@Url.Action("Index","hizmet",new {id=k.turID})" class="btn btn-success">Hizmetler</a></td>
        <td><a href="@Url.Action("Index","DetayGorsel",new {id=k.turID})" class="btn btn-success">Görseller</a></td>
          </tr>
    }
</table>
<a href="/Turlar/TurlarEkle" class="btn btn-info">Tur Ekle</a>