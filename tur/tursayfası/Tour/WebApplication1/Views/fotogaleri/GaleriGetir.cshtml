@model WebApplication1.Models.sınıflar.fotogaleri
@{
    ViewBag.Title = "GaleriGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Ana başlık Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("GaleriGüncelle", "fotogaleri", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.HiddenFor(x => x.galeriID)
   

    @Html.LabelFor(x => x.galeriResim)
    <input type="file" src="@Model.galeriResim" name="fileImg"/>
    <br/>
    


   
    
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

</div>
}

