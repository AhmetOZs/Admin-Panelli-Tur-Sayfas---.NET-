@model WebApplication1.Models.sınıflar.hizmetRU
@{
    ViewBag.Title = "HizmetGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Ana başlık Güncelleme Ekranı</h2>
<br />
@using (Html.BeginForm("HizmetGüncelle", "hizmetRU", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.HiddenFor(x => x.hizmetID)
    @Html.LabelFor(x => x.hizmetad)
    @Html.TextBoxFor(x => x.hizmetad, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.hizmetaciklama)
    @Html.TextBoxFor(x => x.hizmetaciklama, new { @class = "form-control" })
    <br />
     @Html.LabelFor(x => x.ucret)
    @Html.TextBoxFor(x => x.ucret, new { @class = "form-control" })
    <br />
    

   
    
    <button class="btn btn-default" style="background-color:yellowgreen">Güncelle</button>

</div>
}

