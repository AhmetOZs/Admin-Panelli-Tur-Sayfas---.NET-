@model WebApplication1.Models.sınıflar.Yorum
@{
    ViewBag.Title = "YorumEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Yeni Yorum Sayfası</h2>

<br />
@using (Html.BeginForm("YorumEkle", "Yorum", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form class="form-group" method="post">
        
         @Html.LabelFor(x => x.tur)
        @Html.TextBoxFor(x => x.tur, new { @class = "form-control" })
        <br />
         @Html.LabelFor(x => x.ad)
        @Html.TextBoxFor(x => x.ad, new { @class = "form-control" })
        <br />
         @Html.LabelFor(x => x.soyad)
        @Html.TextBoxFor(x => x.soyad, new { @class = "form-control" })
        
         @Html.LabelFor(x => x.yorum)
        @Html.TextBoxFor(x => x.yorum, new { @class = "form-control" })
        <br />
         @Html.LabelFor(x => x.puan)
        @Html.TextBoxFor(x => x.puan, new { @class = "form-control" })
        <br />
        <br />
        
        @Html.LabelFor(x => x.resim)
        <input type="file"  name="fileImg"/>
        <br />
        
        
        
        <button class="btn btn-primary">Kaydet</button>

    </form>
}



