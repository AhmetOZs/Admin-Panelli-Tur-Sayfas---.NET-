

@model WebApplication1.Models.sınıflar.turdetay
@{
    ViewBag.Title = "ReferansEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Yeni Açıklama Sayfası</h2>

<br />
@using (Html.BeginForm("AciklamaEkle", "TurDetay", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form class="form-group" method="post">
        @Html.LabelFor(x => x.detaybaslik)
        @Html.TextBoxFor(x => x.detaybaslik, new { @class = "form-control" })
        <br />
         @Html.LabelFor(x => x.detayaciklama)
        @Html.TextBoxFor(x => x.detayaciklama, new { @class = "form-control" })
        <br />


        <br />
        @Html.LabelFor(x => x.Turlar.turID)
        @Html.DropDownListFor(x => x.turID, (List<SelectListItem>)ViewBag.dgr1, new {@class="from-control"})
        <br />
        
        
        <button class="btn btn-primary">Kaydet</button>

    </form>
}


